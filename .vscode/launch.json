{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug myservice",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "career-sync-api", "--inspect"],
      "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/*"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    }
  ]
}

